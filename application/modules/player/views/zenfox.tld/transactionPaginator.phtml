<?php if (isset($this->next)): ?>
<a href="<?= $this->url(array(
				'pages' => $this->last, 
				'item' => $this->itemCountPerPage, 
				'from' => $this->myFromDate, 
				'to' => $this->myToDate,
				'amT' => $this->amountType,
				'transT' => $this->transactionType)); ?>">Last &gt;&gt;</a> 
 
<?php else: ?>
<span class="disabled">Last</span> 
<?php endif; ?>
</div>
<?php endif; ?>