			echo '<td>'.$item['trans_type'].'</td>';
			echo '<td>'.$item['amount'].'</td>';
			echo '</tr>';
		}
		echo '</table>';
	
		echo '<br><br>';
		echo $this->paginationControl(
						$this->paginator,
						'Sliding',
						'transaction_paginator_control.phtml',
						array(
							'toDate' => $this->toDate,
							'fromDate' => $this->fromDate));
	}
