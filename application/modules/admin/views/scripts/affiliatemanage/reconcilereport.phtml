{
	$paginator = $this->paginator;
	$affTracker = new AffiliateTracker();
	$csrIds = new CsrIds();
	if (count($this->paginator))
	{
		$items = $paginator->getCurrentItems();
		echo "<br><table border = '1'>";
		echo '<tr>';
		echo '<th align="left">Transaction Id</th>';
		echo '<th align="left">Date Time</th>';
		echo '<th align="left">Tracker Name</th>';
		echo '<th align="left">Player Name</th>';
		echo '<th align="left">Transaction Type</th>';
		echo '<th align="left">Amount</th>';
		foreach($items as $item)
		{
			echo '<tr>';
			echo '<td>'.$item['audit_id'].'</td>';
			echo '<td>'.$item['trans_end_time'].'</td>';
			echo '<td>'.$affTracker->getTrackerNameFromId($item['tracker_id']).'</td>';
